{
  "manifest_version": 2,

  "name": "APS",
  "description": "Fuck you",
  "version": "0.0.1",

  "browser_action": {
    "default_icon": "chromext.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["http://aps-ua-customer.local:3012/*"],
      "run_at": "document_start",
      "js": ["content-script.js"]
    }
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "permissions": [
    "activeTab",
    "<all_urls>"
  ]
}

